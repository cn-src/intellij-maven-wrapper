<?xml version="1.0" encoding="utf-8"?>
<idea-plugin>
    <id>intellij-maven-wrapper-plugin</id>
    <name>Maven Wrapper Support</name>
    <version>0.0.1</version>
    <vendor email="710692586@qq.com" url="https://github.com/cn-src/intellij-maven-wrapper-plugin">zhangpeng</vendor>

    <description><![CDATA[
      Maven Wrapper Support for IntelliJ IDEA.
      ]]>
    </description>
    <change-notes>
    </change-notes>
    <idea-version since-build="172.0"/>
    <depends>org.jetbrains.idea.maven</depends>
    <actions>
        <group id="MavenWrapperGroup.MavenWrapperMenu" text="MavenWrapper" description="Maven wrapper Tool">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="MavenWrapper.MavenWrapperAction" class="cn.javaer.intellij.plugin.MavenWrapperAction"
                    text="Refresh Config"
                    description="Refresh the configuration"/>
        </group>
    </actions>
    <project-components>
        <component>
            <implementation-class>cn.javaer.intellij.plugin.MavenWrapperProjectComponent</implementation-class>
        </component>
    </project-components>
</idea-plugin>
